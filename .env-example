############
### Core ###
############
NODE_ENV=development
MONGODB_URI=mongodb://mongo:27017/voxnexus #Set to your MongoDB URI. Ex: mongodb://mongo:27017/voxnexus
JWT_SECRET= #Use setup.sh to generate a random secret
SESSION_SECRET= #Use setup.sh to generate a random secret
TURN_USERNAME= #Use setup.sh to generate a random username
TURN_PASSWORD= #Use setup.sh to generate a random password
PORT=3000 #Leave alone but you can change it
CLIENT_URL=http://client:8080 #must match docker-compose.yml
REDIS_URL=redis://redis:6379 #must match docker-compose.yml

############
### Mail ###
############
MAILPACE_API_KEY= #Api key from mailpace
MAIL_TYPE=API #Use API or STMP
STMP_USER= #STMP username
STMP_PASSWORD= #STMP password
STMP_HOST= #STMP host
STMP_PORT= #STMP port
STMP_SECURE=true #true or false

###############
### STORAGE ###
###############
STORAGE=local #s3, local, sftp, ftp

#local
LOCAL_MAX_FILE_SIZE=100000000 #Maximum file size in bytes (default: 10MB, 10000000)

#S3
AWS_REGION= #AWS region
AWS_ACCESS_KEY_ID= #AWS access key id
AWS_SECRET_ACCESS_KEY= #AWS secret access key
AWS_S3_BUCKET= #AWS s3 bucket name

#SFTP
SFTP_HOST= #SFTP server hostname
SFTP_PORT= #SFTP server port (default: 22)
SFTP_USER= #SFTP username
SFTP_PASSWORD= #SFTP password (optional if using private key)
SFTP_PRIVATE_KEY= #SSH private key (optional if using password)
SFTP_ROOT_PATH= #Root path for file storage
SFTP_POOL_SIZE= #Connection pool size (default: 5)
SFTP_MAX_RETRIES= #Maximum retry attempts (default: 3)
SFTP_RETRY_DELAY= #Base retry delay in ms (default: 1000)
SFTP_CONNECTION_TIMEOUT= #Connection timeout in ms (default: 30000)
SFTP_MAX_FILE_SIZE= #Maximum file size in bytes (default: 10MB, 10000000)

#FTP
FTP_HOST= #FTP server hostname
FTP_PORT= #FTP server port (default: 21)
FTP_USER= #FTP username
FTP_PASSWORD= #FTP password
FTP_ROOT_PATH= #Root path for file storage
FTP_SECURE= #Whether to use FTPS (default: false)
FTP_POOL_SIZE= #Connection pool size (default: 5)
FTP_MAX_RETRIES= #Maximum retry attempts (default: 3)
FTP_RETRY_DELAY= #Base retry delay in ms (default: 1000)
FTP_CONNECTION_TIMEOUT= #Connection timeout in ms (default: 30000)
FTP_MAX_FILE_SIZE= #Maximum file size in bytes (default: 10MB, 10000000)